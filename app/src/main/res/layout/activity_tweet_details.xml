<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".activities.TweetDetailsActivity">

        <ImageView
            android:id="@+id/ivTweetProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvTweetScreenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/ivTweetProfile"
            android:text="TextView"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            tools:text="LopezScript" />

        <TextView
            android:id="@+id/tvTweetBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTweetScreenName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/ivTweetProfile"
            android:textColor="@color/dark_gray"
            tools:text="This is my tweet!" />

    <ImageView
        android:id="@+id/ivTweetMediaImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTweetBody"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:maxHeight="300dp"
        android:visibility="visible"
        tools:srcCompat="@tools:sample/avatars" />


</RelativeLayout>